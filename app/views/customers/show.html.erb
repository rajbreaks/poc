<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @customer.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @customer.email %>
</p>

<table border="1">
<tr><td>Product Name</td><td>Price</td><td>Qty</td></tr>
<% @customer.orders.each do |c| %>
<tr>
<td><%= link_to c.pname, c %> </td><td><%= c.price %> </td><td><%= c.qty %> </td>
</tr>
<% end %>
</table>

<%= link_to 'Edit', edit_customer_path(@customer) %> |
<%= link_to 'Back', customers_path %>
